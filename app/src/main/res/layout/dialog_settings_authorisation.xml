<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

    <TextView
            android:id="@+id/dialog_settings_authorisation_warning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/dialog_message_settings_authorisation"/>

    <EditText
            android:id="@+id/dialog_settings_et_passcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_settings_authorisation_warning"
            android:layout_alignParentStart="true"
            android:hint="@string/util_passcode"
            android:inputType="number|numberPassword"
            android:autofillHints="TEST2"/>

</RelativeLayout>